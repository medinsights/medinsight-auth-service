# Django Settings
SECRET_KEY=your-django-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,auth-service

# Database - PostgreSQL (Production-ready)
# For local development with docker-compose:
DATABASE_URL=postgresql://auth_user:auth_pass@postgres:5432/auth_db
# For local development without docker (direct connection):
# DATABASE_URL=postgresql://auth_user:auth_pass@localhost:5433/auth_db
# For SQLite (not recommended for production):
# DATABASE_URL=sqlite:///db.sqlite3

# JWT Settings - RS256 (Recommended for production)
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_LIFETIME=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_LIFETIME=2592000  # 30 days in seconds

# RSA Keys (generate using: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem)
# For production, use environment variables or secret management
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem

# Alternative: HS256 (Simpler but requires shared secret)
# JWT_ALGORITHM=HS256
# JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Security
SECURE_SSL_REDIRECT=False  # Set to True in production with HTTPS
SESSION_COOKIE_SECURE=False  # Set to True in production
CSRF_COOKIE_SECURE=False  # Set to True in production

# Rate Limiting (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REFRESH=10

# Email (for verification - optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# Frontend URL
FRONTEND_URL=http://localhost:5173
